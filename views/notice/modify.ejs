<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <div class="header">
      <% include ../partials/header %>
    </div>


      <div class="container" style="margin-top:30px">
          <div class="row">
              <form role="form" id="body" method="post" action="/notice/modify/commit/<%= notices[0] %>">
                  <div class="col-lg-12">
                      <!--<div class="well well-sm"><strong><span class="glyphicon glyphicon-asterisk"></span>Required Field</strong></div>-->
                      <div class="form-group">
                          <label for="InputName">제목 입력</label>
                          <div class="input-group">
                              <input type="text" class="form-control" name="ntctitle" id="InputName" value="<%= notices[1] %>" required>
                              <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                          </div>
                      </div>
                      <div class="form-group">
                          <label for="InputMessage">내용 입력</label>
                          <div class="input-group">
                              <textarea name="ntcdescription" id="InputMessage" class="form-control" rows="18" required><%= notices[2] %></textarea>
                              <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                          </div>
                      </div>
                      <input type="submit" name="submit" id="submit" value="수정" class="btn btn-primary pull-right">
                  </div>
              </form>
          </div>
      </div>
    </div>
  </body>
</html>
