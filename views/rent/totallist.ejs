<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
      <div class="header">
      <% include ../partials/header %>
      </div>
    <div class="container" style="margin-top:30px">
      <div class="list-group">
        <div class="list-group-item active"><h4>Phone 대여기록</h4></div>
        <% phonerents.forEach(function(rent) { %>
          <div class="list-group-item">
            <p class="list-group-item-text col-md-4"><%= rent[10] %>(<%= rent[11] %>)</p>
            <p class="list-group-item-text col-md-4"><%= rent[8] %></p>
            <p class="list-group-item-text col-md-4"><%= rent[2] %></p>
            <br>
            <p class="list-group-item-text" style="text-algin:right; margin-left:700px"><% if(rent[6]==null){ %>대여 중(<%= rent[5].toString().substr(0,16) %>~)<% }else{ %>반납 완료(<%= rent[5].toString().substr(0,16) %>~<%= rent[6].toString().substr(0,16) %>)<% }; %></p>
          </div>
          <% }); %>
      </div>
    </div>


    <div class="container" style="margin-top:30px">
      <div class="list-group">
        <div class="list-group-item active"><h4>Usim 대여기록</h4></div>
        <% usimrents.forEach(function(rent) { %>
          <div class="list-group-item">
            <p class="list-group-item-text col-md-4"><%= rent[10] %></p>
            <p class="list-group-item-text col-md-4"><%= rent[8] %></p>
            <p class="list-group-item-text col-md-4"><%= rent[2] %></p>
            <br>
            <p class="list-group-item-text" style="text-algin:right; margin-left:700px"><% if(rent[6]==null){ %>대여 중(<%= rent[5].toString().substr(0,16) %>~)<% }else{ %>반납 완료(<%= rent[5].toString().substr(0,16) %>~<%= rent[6].toString().substr(0,16) %>)<% }; %></p>
          </div>
          <% }); %>
      </div>
    </div>

  </body>
</html>
