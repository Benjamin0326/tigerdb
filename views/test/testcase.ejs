<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
    <style>
    .panel-heading span {
      margin-top: -20px;
      font-size: 15px;
    }
    .row {
        margin-top: 40px;
        padding: 0 10px;
    }
    .clickable {
    cursor: pointer;
    }
  </style>
  <body>
      <div class="header">
        <% include ../partials/header %>
      </div>
      <div class="container">
        <div class="row">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title"><center>Manual Case</center></h3>
                <span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-up"></i></span>
              </div>
              <div class="panel-body">
                <table class="table">
                  <tr>
                    <th style="width:150px">Manul No</th>
                    <th style="width:350px">제목</th>
                    <th style="width:100px">수정</th>
                    <th style="width:100px">삭제</th>
                  </tr>
                  <% testcases.forEach(function(tc){ %>
                  <tr data-href="/test/testcase/<%= tc[0] %>" class="clickable">
                    <td><%= tc[0] %></td>
                    <td><%= tc[1] %></td>
                    <td><input type="button" name="add" id="add" value="수정" class="btn btn-primary pull" onclick="location.href='/test/testcase/modify/<%= tc[0] %>'"></td>
                    <td><input type="button" name="add" id="add" value="삭제" class="btn btn-primary pull" onclick="location.href='/test/testcase/delete/<%= tc[0] %>'"></td>
                  </tr>
                  <% });%>
                </table>
              </div>
            </div>
        </div>
        <div class="row" style="margin-top:0px" align="right">
          <input type="button" name="add" id="add" value="Manual Case 생성" class="btn btn-primary pull-right" onclick="location.href='/test/testcase/add'">
      </div>
  </body>
</html>
<script type="text/javascript">
  jQuery(function ($) {
        $('.panel-heading span.clickable').on("click", function (e) {
            if ($(this).hasClass('panel-collapsed')) {
                // expand the panel
                $(this).parents('.panel').find('.panel-body').slideDown();
                $(this).removeClass('panel-collapsed');
                $(this).find('i').removeClass('glyphicon-chevron-down').addClass('glyphicon-chevron-up');
            }
            else {
                // collapse the panel
                $(this).parents('.panel').find('.panel-body').slideUp();
                $(this).addClass('panel-collapsed');
                $(this).find('i').removeClass('glyphicon-chevron-up').addClass('glyphicon-chevron-down');
            }
        });
    });
  $('tr[data-href]').on("click", function() {
    document.location = $(this).data('href');
});
</script>
