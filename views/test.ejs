<!DOCTYPE html>
<html>
  <head>
    <% include partials/head %>
    <style>
.panel-heading span {
    margin-top: -20px;
    font-size: 15px;
}
.row {
    margin-top: 40px;
    padding: 0 10px;
}
.clickable {
    cursor: pointer;
}

</style>
  </head>
  <body>
    <div class="header">
      <% include partials/header %>
    </div>
    <% if(emp.empauth>3){ %>
    <div class="container" style="width:1000px">
        <div class="row">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><center>In Progress Project</center></h3>
              <span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-up"></i></span>
            </div>
            <div class="panel-body">
              <table class="table">
                <tr>
                  <th>Category</th>
                  <th>Name</th>
                  <th>Manager</th>
                  <th>StartDate</th>
                  <th style="width:300px">Description</th>
                </tr>
                <% project.forEach(function(item){ %>
                <%    if(item[3]==null){ %>
                <tr class="clickable" data-href="/test/project/<%= item[0] %>">
                  <td><%= item[4] %></td>
                  <td><%= item[1] %></td>
                  <td><%= item[8] %> (<%= item[5] %>)</td>
                  <td><%= item[2].toString().substr(0, 16) %></td>
                  <td><%= item[6]%></td>
                </tr>
                <%  } %>
                <% });%>
              </table>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><center>Completed Project</center></h3>
              <span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-up"></i></span>
            </div>
            <div class="panel-body">
              <table class="table">
                <tr>
                  <th>Category</th>
                  <th>Name</th>
                  <th>Manager</th>
                  <th>StartDate</th>
                  <th>EndDate</th>
                </tr>
                <% project.forEach(function(item){  %>
                <% if(item[3]!=null){ %>
                <tr>
                  <td><%= item[4] %></td>
                  <td><%= item[1] %></td>
                  <td><%= item[5] %></td>
                  <td><%= item[2].toString().substr(0, 16) %></td>
                  <td><%= item[3].toString().substr(0, 16) %></td>
                </tr>
                <% }  %>
                <% });%>
              </table>
            </div>
          </div>
        </div>
        <div class="row" style="margin-top:0px">
          <input type="button" name="add" id="add" value="Add" class="btn btn-info pull-right" onclick="location.href='/test/project/add'">
        </div>
    <% }else if(emp.empauth>2){ %>
    <div class="container" style="margin-top:30px">
      <div class="row">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><center>In Progress Project</center></h3>
            <span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-up"></i></span>
          </div>
          <div class="panel-body">
            <table class="table">
              <tr>
                <th>Category</th>
                  <th>Name</th>
                  <th>Manager</th>
                  <th>StartDate</th>
                  <th style="width:300px">Description</th>
              </tr>
              <% project.forEach(function(item){ %>
              <%    if(item[3]==null){ %>
              <tr data-href="/test/assign/<%= item[0] %>" class="clickable">
                <td><%= item[4] %></td>
                  <td><%= item[1] %></td>
                  <td><%= item[8] %> (<%= item[5] %>)</td>
                  <td><%= item[2].toString().substr(0, 16) %></td>
                  <td><%= item[6]%></td>
              </tr>
              <%  } %>
              <% });%>
            </table>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><center>Completed Project</center></h3>
            <span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-up"></i></span>
          </div>
          <div class="panel-body">
            <table class="table">
              <tr>
                <th>Category</th>
                <th>Name</th>
                <th>Manager</th>
                <th>StartDate</th>
                <th>EndDate</th>
              </tr>
              <% project.forEach(function(item){  %>
              <% if(item[3]!=null){ %>
              <tr>
                <td><%= item[4] %></td>
                <td><%= item[1] %></td>
                <td><%= item[5] %></td>
                <td><%= item[2].toString().substr(0, 16) %></td>
                <td><%= item[3].toString().substr(0, 16) %></td>
              </tr>
              <% }  %>
              <% });%>
            </table>
          </div>
        </div>
      </div>
      <div class="row" style="margin-top:0px" align="right">
        <a href="/test/testcase"><button class="btn btn-primary">TestCase 관리</button></a>
        <a href="/test/testset"><button class="btn btn-primary">TestSet 관리</button></a>
      </div>
      <% }%>
    </div>
  </body>
</html>

<script type="text/javascript">
    jQuery(function ($) {
        $('.panel-heading span.clickable').on("click", function (e) {
            if ($(this).hasClass('panel-collapsed')) {
                // expand the panel
                $(this).parents('.panel').find('.panel-body').slideDown();
                $(this).removeClass('panel-collapsed');
                $(this).find('i').removeClass('glyphicon-chevron-down').addClass('glyphicon-chevron-up');
            }
            else {
                // collapse the panel
                $(this).parents('.panel').find('.panel-body').slideUp();
                $(this).addClass('panel-collapsed');
                $(this).find('i').removeClass('glyphicon-chevron-up').addClass('glyphicon-chevron-down');
            }
        });
    });
$('tr[data-href]').on("click", function() {
    document.location = $(this).data('href');
});
</script>
