<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <div class="header">
      <% include ../partials/header %>
    </div>
    <div class="container" style="margin-top:30px">
        <div class="col-md-12">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="text-center">스마트폰 추가<span class="fa fa-edit pull-right bigicon"></span></h4>
            </div>
            <div class="panel-body text-center">
              <div id="grid">
              </div>
            </div>
              <input type="submit" name="submit" id="submit" value="Add" class="btn btn-info pull-right comment_submit" style="margin-top:10px;">
          </div>
        </div>
    </div>
  </body>
</html>

<script type="text/javascript">
  var editno=[];
  var griddata=[{
    "phonename" : "",
    "manufacture" : "",
    "osver" : "",
    "group" : ""
  }];
    $(document).ready(function () {
        $("#grid").shieldGrid({
            dataSource: {
                data: griddata,
                selection: true,
                schema: {
                    fields: {
                        id: { path: "id", type: Number },
                        phonename: { path: "phonename", type: String },
                        manufacture: { path: "manufacture", type: String },
                        osver: { path: "osver", type: String },
                        group: { path: "group", type: String },
                        isActive: { path: "isActive", type: Boolean }
                    }
                }
            },
            sorting: {
                multiple: true
            },
            rowHover: false,
            columns: [
                { field: "phonename", title: "Phone Name", width: "120px" },
                { field: "manufacture", title: "manufacture", width:"120px"},
                { field: "osver", title: "osver", width: "80px"},
                { field: "group", title: "Phone Group", width: "120px"},
                {
                    width: 150,
                    title: "Add Column",
                    buttons: [
                        { commandName: "edit", caption: "Edit" }
                    ]
                }
            ],
            events: {
              getCustomEditorValue: function (e) {
                  e.value = $("#test").swidget().value();
                  $("#test").swidget().destroy();
              }
            },
            editing: {
                enabled: true,
                mode: "popup",
                confirmation: {
                    "delete": {
                        enabled: true,
                        template: function (item) {
                            editno.push(item.id);
                            return "Delete row with ID = " + item.id
                        }
                    }
                }
            }
        });
    });

    $(function(){
            var data = {};
            $(".comment_submit").click(function(){
                grid = $("#grid").swidget().dataSource.data;
                var finaldata=grid.concat(editno);
                $.ajax({
                 method: "POST",
                 url: "/phone/add_commit",
                 data: {
                  data : JSON.stringify(finaldata)},
                 success: function(){
                 },
                 error: function(){
                 }
                })
                 .done(function( msg ) {
                  location.href='/phone';
                 });
            });
        });

</script>
