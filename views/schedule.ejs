<!DOCTYPE html>
<html>
  <head>
    <% include partials/head %>
  </head>
  <body>
    <div class="header">
      <% include partials/header %>
    </div>
    <div class="container" style="margin-top:30px">
      <form id="body" action="schedule/add" onsubmit="return validate()" method="POST">
      <div class="container">
        <div class="form-group col-md-6">
            <input name="schtitle" type="text" class="form-control" id="exampleInputPassword1" placeholder="제목을 입력해주세요.">
        </div>
        <div class="form-group col-md-6">
          <div class="continer col-md-3">
            <input name="startdate" type="text" id="datepicker" class="form-control" placeholder="시작일">
          </div><div class="continer col-md-3">
            <input name="enddate" type="text" id="datepicker2" class="form-control" placeholder="종료일">
          </div>
        </div><br>
        <div class="form-group col-md-12">
        <textarea name="schcontent" class="form-control" rows="3" id="comment" placeholder="내용을 입력해주세요."></textarea>
      </div>
        <br>
        <div class="container col-md-11"></div><div class="container col-md-1">
          <button type="submit" class="btn btn-default btn-sm">일정 등록</button>
        </div>
      </div>
    </form>
    <br>
    <div class="container">
      <div class="list-group">
        <% schedules.forEach(function(schedule) { %>
          <div class="list-group-item">
            <h4 class="list-group-item-text"><%= schedule[1] %></h4>
            <br>
            <p class="list-group-item-text" style="white-space:pre-line"><%= schedule[2] %></p>
            <p class="list-group-item-text" style="text-algin:right; margin-left:700px"><%= schedule[4].toString().substr(0,16) %> ~ <%= schedule[5].toString().substr(0,16) %>
            <% if(emp.empno==schedule[3]){ %>
              <form id="body" action="schedule/delete" method="POST">
              <input type="hidden" name="schno" value="<%= schedule[0] %>" >
              <button type="submit" class="btn btn-default btn-sm">삭제</button>
            </form>
            <% } %></p>

          </div>
          <% }); %>
      </div>
    </div>
    <a href="/schedule/total"><button type="submit" class="btn btn-default btn-sm">지난 일정 보기</button></a>
  </div>
  </body>
</html>
<script>
  $(function() {
    $( "#datepicker" ).datepicker();
    $( "#datepicker2" ).datepicker();
  });

  function validate(){
    var title = document.forms["body"]["schtitle"].value;
    var sdate = document.forms["body"]["startdate"].value;
    var edate = document.forms["body"]["enddate"].value;
    var desc = document.forms["body"]["schcontent"].value;

    if(title==null || title==""){
      alert("Title must be filled out");
      return false;
    }
    if(sdate==null || sdate==""){
      alert("Start date must be filled out");
      return false;
    }
    if(edate==null || edate==""){
      alert("End date be filled out");
      return false;
    }
  }
  </script>
