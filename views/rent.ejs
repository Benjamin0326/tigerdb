<!DOCTYPE html>
<html>
  <head>
    <% include partials/head %>
  </head>
  <body>
      <div class="header">
      <% include partials/header %>
    </div>
    <div class="container" style="margin-top:30px">
      <div class="list-group">
        <div class="list-group-item active" style="height:50px"><h4><center>스마트폰 대여 현황</center></h4></div>
        <% phones.forEach(function(phone) { %>
          <div class="list-group-item" style="height:50px;">
            <p class="list-group-item-text col-md-1"><%= phone[0] %></p>
            <p class="list-group-item-text col-md-2"><a href="/rent/phonelist/<%= phone[0] %>"><%= phone[1] %></a></p>
            <p class="list-group-item-text col-md-2"><%= phone[5] %></p>
            <p class="list-group-item-text col-md-2"><%= phone[2] %></p>
            <p class="list-group-item-text col-md-2"><%= phone[3] %></p>
            <p class="list-group-item-text">
              <% if(phone[4]==0){ %>
                <a href="/rent/phonerent/<%= phone[0] %>"><button class="btn btn-primary" style="width:80px">대여</button></a>
            <% }else if(phone[4]==1){ %>
                <a href="/rent/phonereturn/<%= phone[0] %>"><button class="btn btn-primary" style="width:80px">반납</button></a>
            <% }else if(phone[4]==2){ %>
                <button class="btn btn-primary" style="width:80px" disabled="disabled">사용불가</button>
            <% }; %>
            </p>
          </div>
          <% }); %>
      </div>
    </div>

    <div class="container" style="margin-top:30px">
      <div class="list-group">
        <div class="list-group-item active" style="height:50px"><h4><center>USIM 대여 현황</center></h4></div>
        <% usims.forEach(function(usim) { %>
          <div class="list-group-item" style="height:50px">
            <p class="list-group-item-text col-md-1"><%= usim[0] %></p>
            <p class="list-group-item-text col-md-2"><a href="/rent/usimlist/<%= usim[0] %>"><%= usim[2] %></a></p>
            <p class="list-group-item-text col-md-2"><%= usim[1] %></p>
            <p class="list-group-item-text col-md-2"><%= usim[3] %></p>
            <p class="list-group-item-text col-md-2"><%= usim[4] %></p>
            <p class="list-group-item-text">
              <% if(usim[5]==0){ %>
                <a href="/rent/usimrent/<%= usim[0] %>"><button class="btn btn-primary" style="width:80px">대여</button></a>
            <% }else if(usim[5]==1){ %>
                <a href="/rent/usimreturn/<%= usim[0] %>"><button class="btn btn-primary" style="width:80px">반납</button></a>
            <% }else if(usim[5]==2){ %>
                <button class="btn btn-primary" disabled="disabled">사용불가</button>
            <% }; %>
            </p>
          </div>
          <% }); %>
      </div>
    </div>
    <div class="container" style="margin-top:30px;text-align:right">
      <a href="/rent/totallist"><button class="btn btn-primary">전체 대여 기록</button></a>
    </div>
  </body>
</html>
