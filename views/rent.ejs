<!DOCTYPE html>
<html>
  <head>
    <% include partials/head %>
  </head>
  <body>
      <div class="header">
      <% include partials/header %>
    </div>
    <div class="container" style="margin-top:30px">
      <a href="/rent/totallist"><button class="btn btn-primary">전체 대여 기록</button></a>
    </div>

    <div class="container" style="margin-top:30px">
      <div class="list-group">
        <div class="list-group-item active"><h4>Phone</h4></div>
        <% phones.forEach(function(phone) { %>
          <div class="list-group-item" style="height:60px;">
            <p class="list-group-item-text col-md-4"><a href="/rent/phonelist/<%= phone[0] %>"><%= phone[1] %>(<%= phone[3] %>)</a></p>
            <p class="list-group-item-text col-md-4"><%= phone[2] %></p>
            <p class="list-group-item-text">
              <% if(phone[4]==0){ %>
                <a href="/rent/phonerent/<%= phone[0] %>"><button class="btn btn-primary">대여</button></a>
            <% }else if(phone[4]==1){ %>
                <a href="/rent/phonereturn/<%= phone[0] %>"><button class="btn btn-primary">반납</button></a>
            <% }else if(phone[4]==2){ %>
                <button class="btn btn-primary" disabled="disabled">사용불가</button>
            <% }; %>
            </p>
          </div>
          <% }); %>
      </div>
    </div>

    <div class="container" style="margin-top:30px">
      <div class="list-group">
        <div class="list-group-item active"><h4>USIM</h4></div>
        <% usims.forEach(function(usim) { %>
          <div class="list-group-item">
            <p class="list-group-item-text col-md-4"><a href="/rent/usimlist/<%= usim[0] %>"><%= usim[2] %></a></p>
            <p class="list-group-item-text col-md-4"><%= usim[4] %></p>
            <p class="list-group-item-text">
              <% if(usim[5]==0){ %>
                <a href="/rent/usimrent/<%= usim[0] %>"><button class="btn btn-primary">대여</button></a>
            <% }else if(usim[5]==1){ %>
                <a href="/rent/usimreturn/<%= usim[0] %>"><button class="btn btn-primary">반납</button></a>
            <% }else if(usim[5]==2){ %>
                <button class="btn btn-primary" disabled="disabled">사용불가</button>
            <% }; %>
            </p>
          </div>
          <% }); %>
      </div>
    </div>

  </body>
</html>
