<!DOCTYPE html>
<html>
  <head>
    <% include partials/head %>
  </head>
  <body>
    <div class="header">
      <% include partials/header %>
    </div>
    <div class="container" style="margin-top:30px">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="text-center">USIM 관리 테이블<span class="fa fa-edit pull-right bigicon"></span></h4>
          </div>
          <div class="panel-body text-center">
            <div id="grid"></div>
          </div>
        </div>
      </div>
      <% if(emp.empauth>1){%>
      <div class="container row">
        <input type="button" name="save" id="save" value="저장" class="btn btn-primary pull-right usim_save" style="margin-left:10px; margin-right:10px">
        <input type="button" name="add" id="add" value="추가" class="btn btn-primary pull-right" onclick="location.href='/usim/usim_add'">
      </div>
      <% } %>
    </div>
  </body>
</html>

<script type="text/javascript">
  var editno=[];
  var griddata=[
    <% usims.forEach(function(usim) { %>
      <% if(usim[5]==0 || usim[5]==1 || usim[5]==2){ %>
      {
      "id": <%= usim[0] %>,
      "isActive": true,
      "station": "<%= usim[1] %>",
      "usimno": "<%= usim[2] %>",
      "phoneno": "<%= usim[3] %>",
      "desc": "<%= usim[4] %>",
      "state": "<% if(usim[5]==0){ %>(0)대출가능<% }else if(usim[5]==1){ %>(1)대출중<% }else{ %>(2)대출불가능<% }; %>"
  },
    <% }; %>
    <% }); %>
  ];
    $(document).ready(function () {
        $("#grid").shieldGrid({
            dataSource: {
                data: griddata,
                selection: true,
                schema: {
                    fields: {
                        id: { path: "id", type: Number },
                        station: { path: "station", type: String },
                        usimno: { path: "usimno", type: String },
                        phoneno: { path: "phoneno", type: String },
                        desc: { path: "desc", type: String },
                        isActive: { path: "isActive", type: Boolean },
                        state: { path: "state" }
                    }
                }
            },
            sorting: {
                multiple: true
            },
            rowHover: false,
            columns: [
                { field: "id", title: "", width: "50px" },
                { field: "station", title: "통신사", width: "120px" },
                { field: "usimno", title: "USIM 번호", width:"120px"},
                { field: "phoneno", title: "전화번호", width: "80px"},
                { field: "desc", title: "설명", width: "80px" },
                { field: "state", title: "대여 여부", width: "80px", editable: false },
                {
                    width: 150,
                    title: "수정/삭제",
                    buttons: [
                    <% if(emp.empauth>1){ %>
                        { commandName: "edit", caption: "수정" },
                        { commandName: "delete", caption: "삭제" }
                        <% }%>
                    ]
                }
            ],
            events: {
              getCustomEditorValue: function (e) {
                  e.value = $("#test").swidget().value();
                  $("#test").swidget().destroy();
              }
            },
            editing: {
                enabled: true,
                mode: "popup",
                confirmation: {
                    "delete": {
                        enabled: true,
                        template: function (item) {
                            editno.push(item.id);
                            return "Delete row with ID = " + item.id
                        }
                    }
                }
            }
        });
    });

    $(function(){
            var data = {};
            $(".usim_save").click(function(){
                grid = $("#grid").swidget().dataSource.data;
                var finaldata=grid.concat(editno);
                $.ajax({
                 method: "POST",
                 url: "/usim/commit",
                 data: {
                  data : JSON.stringify(finaldata)},
                 success: function(){
                  alert('update success');
                 },
                 error: function(){
                 }
                })
                 .done(function( msg ) {
                   $("#logpartion").append("<p>완료 되었습니다..</p>");
                 });
            });
        });

</script>
