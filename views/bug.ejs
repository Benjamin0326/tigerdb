
<!DOCTYPE html>
<html>
  <head>
    <% include partials/head %>
  </head>
  <body>
    <div class="header">
      <% include partials/header %>
    </div>
    <div class="container" style="margin-top:30px">
      <a href="/bug/report"><button class="btn btn-primary">Report Bug</button></a>
      <div class="row">
        <div class="col-md-3">
         <a class="dropdown-toggle" data-toggle="dropdown">Phones
         <span class="caret"></span></a>
         <ul class="dropdown-menu">
        <% phones.forEach(function(phone) { %>
          <li><a href="/bug/phone/<%= phone[0] %>"><%= phone[1] %>(<%= phone[3] %>)</a></li>
        <% }); %>
          </ul>
        </div>
        <div class="col-md-3">
          <a class="dropdown-toggle" data-toggle="dropdown">Phone Group
         <span class="caret"></span></a>
         <ul class="dropdown-menu">
        <% phonegroups.forEach(function(phonegroup) { %>
          <li><a href="/bug/phonegroup/<%= phonegroup[0] %>"><%= phonegroup[0] %></a></li>
        <% }); %>
          </ul>
        </div>
        <div class="col-md-3">
          <a class="dropdown-toggle" data-toggle="dropdown">Status
          <span class="caret"></span></a>
          <ul class="dropdown-menu">
         <li> <a href="/bug/status/0">New</a></li>
         <li> <a href="/bug/status/1">Recognized</a></li>
         <li> <a href="/bug/status/2">In Progress</a></li>
         <li> <a href="/bug/status/3">Resolved</a></li>
         <li> <a href="/bug/status/4">Closed</a></li>
         </ul>
        </div>
        <div class="col-md-3">
          <a class="dropdown-toggle" data-toggle="dropdown">Type
          <span class="caret"></span></a>
          <ul class="dropdown-menu">
          <li><a href="/bug/type/Critical">Critical</a></li>
          <li><a href="/bug/type/Major">Major</a></li>
          <li><a href="/bug/type/Minor">Minor</a></li>
          </ul>
        </div>
      </div>
      <div class="list-group" style="margin-top:10px">
        <% bugs.forEach(function(bug) { %>
          <div class="list-group-item">
            <h4 class="list-group-item-text"><a href="/bug/<%= bug[0] %>" style="color:black"><%= bug[1] %></a></h4>
            <br>
            <p class="list-group-item-text">Status = <% if(bug[6]==0){ %>New<% }else if(bug[6]==1){ %>Recognized<% }else if(bug[6]==2){ %>In Progress<% }else if(bug[6]==3){ %>Resolved<% }else if(bug[6]==4){ %>Closed<% }; %>
               / Type = <%= bug[7] %></p>
            <p class="list-group-item-text" style="text-algin:right; margin-left:700px"><%= bug[4].toString().substr(0,16) %></p>
          </div>
          <% }); %>
      </div>
    </div>

  </body>
</html>
