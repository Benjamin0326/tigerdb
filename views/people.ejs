<!DOCTYPE html>
<html>
  <head>
    <% include partials/head %>
  </head>
  <body>
    <div class="header">
      <% include partials/header %>
    </div>

    <div class="container" style="margin-top:30px">

      <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="text-center">사원 관리 테이블 <span class="fa fa-edit pull-right bigicon"></span></h4>
            </div>
            <div class="panel-body text-center">
                <div id="grid"></div>
            </div>
        </div>
      </div>
    </div>
    <div class="container row">
        <input type="button" name="save" id="save" value="Save" class="btn btn-info pull-right comment_submit">
    </div>
    <div class="container row" id="logpartion">
    </div>
  </body>
</html>

<script type="text/javascript">
  var editno=[];
  var griddata=[
    <% peoples.forEach(function(people) { %>
      {
      "id": <%= people[0] %>,
      "isActive": true,
      "address": "<%= people[4] %>",
      "name": "<%= people[1] %>",
      "phone": "<%= people[5] %>",
      "auth": "<%= people[3] %>",
      "position": "<%= people[2] %>",
      "email": "<%= people[6] %>"
  },
    <% }); %>
  ];
    $(document).ready(function () {
        $("#grid").shieldGrid({
            dataSource: {
                data: griddata,
                selection: true,
                schema: {
                    fields: {
                        id: { path: "id", type: Number },
                        address: { path: "address", type: String },
                        name: { path: "name", type: String },
                        position: { path: "position", type: String },
                        phone: { path: "phone", type: String },
                        isActive: { path: "isActive", type: Boolean },
                        email: { path: "email", type: String },
                        auth: { path: "auth", type: Number }
                    }
                }
            },
            sorting: {
                multiple: true
            },
            rowHover: false,
            columns: [
                { field: "name", title: "Person Name", width: "120px"},
                { field: "position", title: "Position", width:"120px", editor: myCustomEditor},
                { field: "address", title: "Address", width: "120px"},
                { field: "phone", title: "Phone", width: "120px" },
                { field: "email", title: "Email" },
                { field: "auth", title: "Authority", width: "120px" },
                {
                    width: 150,
                    title: "Update/Delete Column",
                    buttons: [
                        { commandName: "edit", caption: "Edit" },
                        { commandName: "delete", caption: "Delete" }
                    ]
                }
            ],
            events: {
              getCustomEditorValue: function (e) {
                  e.value = $("#test").swidget().value();
                  $("#test").swidget().destroy();
              }
            },
            editing: {
                enabled: true,
                mode: "popup",
                confirmation: {
                    "delete": {
                        enabled: true,
                        template: function (item) {
                            editno.push(item.id);
                            return "Delete row with ID = " + item.id
                        }
                    }
                }
            }
        });
        function myCustomEditor(cell, item) {
    $('<div id="test"/>')
        .appendTo(cell)
        .shieldDropDown({
            dataSource: {
                data: ["Intern", "Employee", "Researcher", "Senior Researcher", "Mager Researcher"]
            },
            value: !item["position"] ? null : item["position"].toString()
        }).swidget().focus();
        }
    });

    $(function(){
            var data = {};
            $(".comment_submit").click(function(){
                grid = $("#grid").swidget().dataSource.data;
                var finaldata=grid.concat(editno);
                $.ajax({
                 method: "POST",
                 url: "/people/commit",
                 data: {
                  data : JSON.stringify(finaldata)},
                 success: function(){
                 },
                 error: function(){
                 }
                })
                 .done(function( msg ) {
                   $("#logpartion").append("<p>완료 되었습니다..</p>");
                 });
            });
        });

</script>
