<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <div class="header">
      <% include ../partials/header %>
    </div>
    <div class="container" style="margin-top:30px">
      <form role="form" id="body" method="post" action="/bug/modify/commit/<%= infos[0][0] %>">
        <div class="form-group">
          <label for="InputName">Summary</label>
            <div class="input-group">
                <input type="text" class="form-control" name="bugsummary" id="InputName" value="<%= infos[0][1] %>" required>
                <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
            </div>
        </div>
        <div class="form-group col-md-4">
          <label for="sel1">Phone</label>
          <select class="form-control" name="phone" id="sel1">
            <% infos.forEach(function(info) { %>
              <option <% if(infos[0][5]==info[10]){ %> selected="selected" <% }; %>>(<%= info[10] %>)<%= info[11] %> -  <%= info[13] %></option>
            <% }); %>
          </select>
        </div>
        <div class="form-group col-md-4">
          <label for="sel1">Type</label>
          <select class="form-control" name="bugtype" id="sel1">
              <option <% if(infos[0][7]=='Critical'){ %> selected="selected" <% }; %>)>Critical</option>
              <option <% if(infos[0][7]=='Major'){ %> selected="selected" <% }; %>>Major</option>
              <option <% if(infos[0][7]=='Minor'){ %> selected="selected" <% }; %>>Minor</option>
          </select>
        </div>
        <div class="form-group col-md-4">
          <label for="sel1">STATUS</label>
          <select class="form-control" name="bugstatus" id="sel1">
              <option <% if(infos[0][6]==0){ %> selected="selected" <% }; %>)>(0)New</option>
              <option <% if(infos[0][6]==1){ %> selected="selected" <% }; %>>(1)Recognized</option>
              <option <% if(infos[0][6]==2){ %> selected="selected" <% }; %>>(2)In Progress</option>
              <option <% if(infos[0][6]==3){ %> selected="selected" <% }; %>>(3)Resolved</option>
              <option <% if(infos[0][6]==4){ %> selected="selected" <% }; %>>(4)Closed</option>
          </select>
        </div>
        <div class="form-group col-md-6">
          <label for="sel1">Project</label>
          <select class="form-control" name="project" id="sel1">
            <% projects.forEach(function(proj) { %>
              <option <% if(infos[0][9]==proj[0]){ %> selected="selected" <% }; %>>(<%= proj[0] %>)<%= proj[1] %></option>
            <% }); %>
          </select>
        </div>
        <div class="form-group col-md-6">
          <label for="sel1">Category</label>
          <select class="form-control" name="category" id="sel1">
              <option <% if(infos[0][8]==1){ %> selected="selected" <% }; %>>(1)UI</option>
              <option <% if(infos[0][8]==2){ %> selected="selected" <% }; %>>(2)기능</option>
              <option <% if(infos[0][8]==3){ %> selected="selected" <% }; %>>(3)보안</option>
              <option <% if(infos[0][8]==4){ %> selected="selected" <% }; %>>(4)네트워크</option>
              <option <% if(infos[0][8]==5){ %> selected="selected" <% }; %>>(5)기타</option>
          </select>
        </div>
        <div class="form-group">
          <label for="InputMessage">Description</label>
          <div class="input-group">
            <textarea id="InputMessage" name="bugdescription" class="form-control" rows="10" required><%= infos[0][2] %></textarea>
            <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
          </div>
        </div>
        <input type="submit" name="submit" id="submit" value="수정" class="btn btn-info pull-right">
      </form>
    </div>
  </body>
</html>
